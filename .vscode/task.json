{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build RobotWriter",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "glyph_store.c",
                "glyph_painter.c",
                "Text_engine.c",
                "serial.c",
                "rs232.c",
                "-o",
                "build/Debug/outDebug.exe",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
